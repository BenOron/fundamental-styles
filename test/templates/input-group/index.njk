<h1>Input Group — Button addon</h1>

{%- set iconbtn %}
        <button class="sap-icon--navigation-down-arrow"></button>
{%- endset %}
{%- set btn %}
        <button>Button</button>
{%- endset %}

{% set example %}

{{ input_group(
    modifier={
        block: "after",
        after: ['after', 'button']
    },
    properties={
        input: {
            properties: {
                value: "1000000"
            }
        },
        after: iconbtn
    })
}}
{{ input_group(
    modifier={
        block: "after",
        after: "button"
    },
    properties={
        input: {
            state: {
                readonly: true
            },
            properties: {
                value: "2000000"
            }
        },
        after: iconbtn
    })
}}
{{ input_group(
    modifier={
        after: ['after', 'button'],
        block: "after"
    },
    properties={
        input: {
            properties: {
                value: "3000000"
            }
        },
        after: btn
    })
}}
{{ input_group(
    modifier={
        after: ['after', 'button'],
        block: "after"
    },
    properties={
        input: {
            properties: {
                value: "4000000"
            }
        },
        after: iconbtn
    })
}}
{% endset %}
{{ format(example) }}


